<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div>
  <%= form_for :sale, url: sales_path, html: { multipart: true } do |form| %>
    <%= form.label :upload_file, 'File to Upload' %>
    <%= form.file_field :upload_file %>
    <%= form.submit 'Upload file', id: 'button_file_upload' %>
  <% end %>
</div>

<table id="sales" class="table table-striped">
  <thead>
    <tr>
      <th><%= t 'sales.buyer.id' %></th>
      <th><%= t 'sales.description' %></th>
      <th><%= t 'sales.price' %></th>
      <th><%= t 'sales.quantity' %></th>
      <th><%= t 'sales.supplier.id' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.buyer.name %></td>
        <td><%= sale.description %></td>
        <td><%= sale.price %></td>
        <td><%= sale.quantity %></td>
        <td><%= sale.supplier.name %> - <%= sale.supplier.address%></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sale_path(sale),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
