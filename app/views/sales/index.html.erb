<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div class="from-group">
  <%= form_for :sale, url: sales_path, html: { multipart: true } do |form| %>
    <%= form.label :upload_file, t('sales.file_to_upload'), class: 'control-label' %>
    <div class="input-group">
      <%= form.file_field :upload_file, class: 'form-control' %>
      <span class="input-group-btn">
	<%= form.submit t('sales.import_button'), id: 'button_file_upload', class: 'btn btn-primary' %>
      </span>
    </div>
  <% end %>
</div>

<table id="sales" class="table table-striped">
  <thead>
    <tr>
      <th><%= t 'sales.buyer.id' %></th>
      <th><%= t 'sales.description' %></th>
      <th><%= t 'sales.price' %></th>
      <th><%= t 'sales.quantity' %></th>
      <th><%= t 'sales.supplier.id' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.buyer.name %></td>
        <td><%= sale.description %></td>
        <td><%= sale.price %></td>
        <td><%= sale.quantity %></td>
        <td><%= sale.supplier.name %> - <%= sale.supplier.address%></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sale_path(sale),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('sales.destroy_message'))) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @sales %>
